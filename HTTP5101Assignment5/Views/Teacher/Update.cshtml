@model HTTP5101Assignment5.Models.Teacher

@{
    ViewBag.Title = "Update";
}

<nav>
    <a href="/Teacher/Show/@ViewBag.Teacher.Teacherid" class="navbar-link">Back</a>
</nav>

<h2>Update @ViewBag.Teacher.TeacherFname @ViewBag.Teacher.TeacherLname</h2>

<form method="POST" action="/Teacher/Edit/@ViewBag.Teacher.Teacherid" style="display:flex;flex-direction:column;" name="TeacherForm">
    <label for="TeacherFname">Teacher first name: </label>
    <input type="text" id="TeacherFname" name="TeacherFname" value="@ViewBag.Teacher.TeacherFname" required />
    <label for="TeacherLname">Teacher last name: </label>
    <input type="text" id="TeacherLname" name="TeacherLname" value="@ViewBag.Teacher.TeacherLname" required />
    <label for="EmployeeNumber">Employee number: </label>
    <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@ViewBag.Teacher.EmployeeNumber" required />
    <label for="Salary">Salary: </label>
    <input type="text" id="Salary" name="Salary" value="@ViewBag.Teacher.Salary" required />
    <input type="submit" id="SubmitBtn" />
</form>

<script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/FormValidation.js" type="text/javascript"></script>